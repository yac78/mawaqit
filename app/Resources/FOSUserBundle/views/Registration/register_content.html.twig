{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-4 col-md-offset-4">
    <h3>{{'registration.registration'|trans({}, 'messages')}}</h3><br>

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_row(form.email) }}
        {{ form_row(form.username) }}
        {{ form_row(form.plainPassword.first, {'attr': {'placeholder': '8 caractères minimum, dont une majuscule, une minuscule et un nombre' }} ) }}
        {{ form_row(form.plainPassword.second, {'attr': {'placeholder': '8 caractères minimum, dont une majuscule, une minuscule et un nombre' }} ) }}
        <button type="submit" class="btn btn-primary">{{'validate'|trans({}, 'messages')}}</button>
        <a href="{{path("fos_user_security_login")}}" class="btn btn-danger">{{'cancel'|trans({}, 'messages')}}</a>
    {{ form_end(form) }}
</div>
