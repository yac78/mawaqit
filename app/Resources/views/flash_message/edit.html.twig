{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h3>{{ 'flashMessage.label'|trans }}</h3>
            <p class="text-muted">{{ 'flashMessage.info'|trans|raw }}</p>
            <form action="{{ path('flash_message_edit', {'mosque': mosque.id}) }}" method="post">
                {{ form(form) }}
            </form>
        </div>
    </div>
{% endblock %}

{% block additional_javascripts %}
